{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": ["build"],
      "inputs": ["__test__/**/*.ts", "__test__/**/*.tsx"],
      "outputMode": "full"
    },
    "test:ci": {
      "outputs": [
        "coverage/**"
      ]
    },
    "test:badges": {
      "outputs": [
        "coverage/badge.svg"
      ]
    }
  }
}
